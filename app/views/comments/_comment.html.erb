<div class="comment">
  <div class="comment-content">
    <%= simple_format(comment.content) %>
  </div>
  <div class="comment-meta">
    Posted <%= time_ago_in_words(comment.created_at) %> ago
  </div>
</div>

<% content_for :styles do %>
  <style>
    .comment {
      background: #f8f9fa;
      border-radius: 5px;
      padding: 15px;
      margin-bottom: 15px;
    }

    .comment-content {
      color: #333;
      line-height: 1.6;
    }

    .comment-content p {
      margin: 0 0 10px 0;
    }

    .comment-content p:last-child {
      margin-bottom: 0;
    }

    .comment-meta {
      color: #666;
      font-size: 0.85em;
      margin-top: 10px;
    }
  </style>
<% end %>
